<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tic_Tac_Toe.Views.GameModePage">

    <StackLayout Spacing="15">
        <Label HorizontalOptions="CenterAndExpand" Margin="0,0,0,80" Text="Game mode" />
        <Button HorizontalOptions="Center" WidthRequest="300" Text="P1 VS P2" Clicked="Button_Clicked"></Button>
        <Button HorizontalOptions="Center" WidthRequest="300" Text="P1 VS COM" Clicked="Button_Clicked"></Button>
    </StackLayout>

</ContentPage>