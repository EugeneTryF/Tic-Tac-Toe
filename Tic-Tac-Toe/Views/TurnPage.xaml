<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tic_Tac_Toe.Views.TurnPage"
             Title="TurnPage">

    <StackLayout>
        <Label HorizontalOptions="CenterAndExpand" Margin="0,0,0,80" Text="My turn" />
        <HorizontalStackLayout Spacing="20">
            <Button HorizontalOptions="Center" WidthRequest="300" Text="X" Clicked="Button_Clicked"></Button>
            <Button HorizontalOptions="Center" WidthRequest="300" Text="O" Clicked="Button_Clicked"></Button>
        </HorizontalStackLayout>
    </StackLayout>

</ContentPage>