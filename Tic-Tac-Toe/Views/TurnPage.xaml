<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:Tic_Tac_Toe.ViewModels"
             x:DataType="viewmodel:TurnViewModel"
             x:Class="Tic_Tac_Toe.Views.TurnPage"
             Title="{Binding GetUserName}">

    <VerticalStackLayout>
        <Label HorizontalOptions="CenterAndExpand" Margin="0,0,0,80" Text="My turn" />
        <Grid ColumnDefinitions="*,*"
              ColumnSpacing="5"
              RowDefinitions="*,Auto">
            <ImageButton Grid.Column="0"
                         Source="cross.png"
                         WidthRequest="125"
                         HeightRequest="125"
                         Command="{Binding ChooseTurnCommand}">
            </ImageButton>

            <ImageButton Grid.Column="1"
                         Source="circle.png"
                         WidthRequest="125"
                         HeightRequest="125"
                         Command="{Binding ChooseTurnCommand}">
            </ImageButton>

        </Grid>
    </VerticalStackLayout>

</ContentPage>