<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tic_Tac_Toe.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tic_Tac_Toe.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Tic_Tac_Toe">

    <ShellContent
        Title=" "
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title=" "
        ContentTemplate="{DataTemplate local:GameModePage}"
        Route="GameModePage" />

    <ShellContent
        Title=" "
        ContentTemplate="{DataTemplate local:TurnPage}"
        Route="TurnPage" />

    <ShellContent
        Title=" "
        ContentTemplate="{DataTemplate local:GamePage}"
        Route="GamePage" />

</Shell>
